# Supabase to Convex + Better Auth Migration Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Supabase database connection
PG_CONNECTION_STRING=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Required: Your Convex deployment URL
CONVEX_URL=https://[YOUR-DEPLOYMENT].convex.cloud

# Required: Secret for migration endpoints (generate a secure random string)
MIGRATION_SECRET=your_secure_migration_secret_here

# Optional: Better Auth migration settings
MIGRATE_TO_BETTER_AUTH=true
BETTER_AUTH_URL=http://localhost:3000

# Optional: Migration behavior settings
DRY_RUN=false
BATCH_SIZE=500
MIGRATION_OUT_DIR=migration_out
TASKS_DEFAULT_IS_PRIVATE=false

# Optional: Supabase project settings (if needed for additional context)
# SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
# SUPABASE_ANON_KEY=your_anon_key_here
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
